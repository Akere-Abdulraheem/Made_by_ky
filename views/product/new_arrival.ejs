<%
<!-- variables tabs -->
const pagetitle ='New_Arrivals';
const pageDescription = 'New_Arrivals';
%>

<%- include ('../layout/header', {pagetitle }) %>

<%- include ('../layout/nav') %>
<div class=".container">     
    <div class="grid text-center">
        <% for (let product of productSection) {%>
            <div class="card" style="width: 18rem;">
                <img src="data:image/jpeg;base64,<%= product.product_image.toString('base64') %>" alt="<%= product.product_name %>" class="img-fluid">
                <div class="card-body">
                    <h2 class="card-title"><%= product.product_name %></h2>
                    <p class="card-text"><%= product.product_type %></p>
                    <p class="card-text">Price: $<%= product.product_price %></p>
                    <form method="post" action="/add-to-cart">
                        <input type="hidden" name="product_image" value="<%= product.image %>">
                        <input type="hidden" name="product_id" value="<%= product.id %>">
                        <input type="hidden" name="product_name" value="<%= product.product_name %>">
                        <input type="hidden" name="product_price" value="<%= product.product_price %>">
                        <input type="hidden" name="quantity" value="1">
                        <button type="submit" class="btn btn-primary">Add to Cart</button>
                    </form>
                </div>
            </div>
        <% }; %>
    </div>
</div>

<!-- <%- include ('../layout/loading') %> -->
<%- include ('../layout/footer') %>
<%- include ('../layout/scripts') %>