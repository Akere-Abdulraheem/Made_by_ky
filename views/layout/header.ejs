<!-- small screen nav style -->
    <style>
        /* Style the side menu */
        .side-menu {
            position: fixed;
            top: 0;
            right: -250px; /* Hide menu off-screen by default */
            width: 250px;
            height: 100%;
            background-color: #f8f9fa;
            transition: left 0.3s ease;
            box-shadow: 2px 0 5px rgba(0,0,0,0.1);
            z-index: 1000;
        }

        .side-menu.active {
            right: 0; /* Show menu */
        }

        .side-menu .nav {
            flex-direction: column;
            padding: 1rem;
        }

        .side-menu .nav-item {
            margin-bottom: 1rem;
        }

        .side-menu .nav-link {
            padding: 0.5rem 1rem;
        }

        .side-menu .close-btn {
            position: absolute;
            top: 1rem;
            left: 1rem;
            font-size: 1.5rem;
            cursor: pointer;
        }

        /* Style for the toggle button */
        .toggle-btn {
            display: none;
            position: absolute;
            top: 1.7rem;
            right: 1rem; /* Position the button on the right side */
            font-size: 1.5rem;
            cursor: pointer;
            z-index: 1000;
        }

        /* Display the toggle button on small screens */
        @media (max-width: 768px) {
            .toggle-btn {
                display: block; /* Show the button on small screens */
                right: 1rem; /* Ensure the button stays on the right side */
                left: auto; /* Ensure there's no left offset */
            }
        }

    </style>
